<section class = "box-title">
    Files:
</section>
<section id = "files-list-box">
    <section class="half-box left-border">
        <section class = "box-title-half">
            Music:
        </section>
        <section class = 'box-content'>
            <%for(let x=0; x<game.songs.length; x++){%>
            <section class = "box-section">
                <button class="box-button music-play" id="<%=game.songs[x].name%>-button">
                    <div>
                        <%=game.songs[x].name%>
                    </div>
                    <div id="<%=game.songs[x].name%>-delete" type="audio" class="file-delete-button">
                        <i class="fas fa-times-circle"></i>
                    </div>
                </button>
            </section>
            <%}%>
        </section>
        <section class = "fill"></section>
    </section>
    <section class="half-box right-border">
        <section class = "box-title-half">
            Images:
        </section>
        <section class = 'box-content'>
            <%for(let x=0; x<game.images.length; x++){%>
            <section class = "box-section image-section">
                <section class="image-name-section">
                    <div class="image-name">
                        <%=game.images[x].name%>
                    </div>
                    <div id="<%=game.images[x].name%>-delete" type="image" class="file-delete-button image-delete-button">
                        <i class="fas fa-times-circle"></i>
                    </div>
                </section>
                <div class="image-display" style="background-image: url('<%=game.images[x].url%>');"></div>
            </section>
            <%}%>
        </section>
        <section class = "fill"></section>
    </section>
</section>
<section id="files-box-box">
    <section class = "files-box-box-box">
        <form id="file-upload-form" class="mt-4" action="/game/<%=game._id%>/files" method="POST" enctype="multipart/form-data">
            <p>Upload Files:</p>
            <div class="form-group">
                Name: <input id = "file-name" type = "text" name="name"/>
                <p>File: <input id = "file" type="file" name="file" id="input-files" class="form-control-file border"/></p>
            </div>
            <button id="file-submit" type="submit" class="btn btn-primary">Submit</button>
        </form>
    </section>
    <section class = "files-box-box-box">
        <form id="font-form" class="mt-4" action="/game/<%=game._id%>/font" method="POST">
            <p>Select Font:</p>
            <div class="form-group">
                <p><select name="font">
                    <option id="Oswald" value="oswald" <%if(game.font==="oswald"){%>selected<%}%>>Oswald</option>
                    <option id="Noto Sans JP" value="noto-sans-jp" <%if(game.font==="noto-sans-jp"){%>selected<%}%>>Noto Sans JP</option>
                </select></p>
                <p id = "example-sentence" class='<%=game.font%>'>This is an example sentence!</p>
            </div>
            <button id="file-submit" type="submit" class="btn btn-primary">Submit</button>
        </form>
    </section>
</section>
<!-- Audio -->
<%for(let x=0; x<game.songs.length; x++){%>
    <audio id='<%=game.songs[x].name%>' loop>
        <source src='<%=game.songs[x].url%>'>
    </audio>
<%}%>