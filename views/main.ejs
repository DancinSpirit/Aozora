<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aozora</title>
    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    <!-- STYLES -->
    <link rel="stylesheet" href="/styles/main.css">
    <!-- JQUERY -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- SCRIPTS -->
    <script src = "/scripts/main.js" defer></script>
</head>
<body>
    <!-- NAV BAR -->
    <nav>
        <section id="top">
            <section id="left">
                <section id="shadow-hide"><p id="aozora">Aozora</p></section>
            </section>
            <section id="right">
                <section class="nav-buttons invisible" id="login-buttons">
                    <button class="nav-button login-button" id="login-button">
                        Log In
                    </button>
                    <button class="nav-button login-button" id="register-button">
                        Register
                    </button>
                </section>
                <section class="nav-buttons invisible" id="home-buttons">
                    <button class="nav-button login-button" id="games-button">
                        Games
                    </button>
                    <button class="nav-button login-button" id="account-button">
                        Account
                    </button>
                    <button class="nav-button login-button" id="logout-button">
                        Logout
                    </button>
                </section>
            </section>
        </section>
        <section id="bottom">
            <section id="bottom-left">
                <section id="slide-bar">
                </section>
                <section id="nav-buttons" class="nav-buttons">
                    <button class="nav-button" id="home-button">
                        Home
                    </button>
                </section>
            </section>
        </section>
    </nav>
    <!-- MAIN BODY -->
    <section class="center-container hidable" id="register">
        <form class="form" id="registration-form" action="/register" method="POST">
            <p class="center-form form-title">Register</p>
            <p class="right-form">Username: <input type="text" name="username" class="form-input"></p>
            <p class="right-form">Password: <input type="password" name="password" class="form-input"></p>
            <p class="center-form"><input type="submit" value="Register" class="submit-button" id="register-button"></p>
        </form>
    </section>
    <section class="center-container hidable" id="login">
        <form class="form" id="login-form" action="/login" method="POST">
            <p class="center-form form-title">Login</p>
            <p class="right-form">Username: <input type="text" name="username" class="form-input"></p>
            <p class="right-form">Password: <input type="password" name="password" class="form-input"></p>
            <p class="center-form"><input type="submit" value="Login" class="submit-button" id="login-button"></p>
        </form>
    </section> 
    <section class="center-container hidable">
        <section id="account-box">
        </section>
    </section> 
    <%if(user){%>
        <script>
            const user = JSON.parse('<%-JSON.stringify(user)%>'); 
        </script>
    <%}else{%>
        <script>
            const user = false;
        </script>
    <%}%>
</body>
</html>