<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aozora</title>
    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    <!-- STYLES -->
    <link rel="stylesheet" href="/styles/main.css">
    <!-- JQUERY -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- SCRIPTS -->
    <script src = "/scripts/main.js" defer></script>
</head>
<body>
    <!-- NAV BAR -->
    <nav>
        <section id="left">
            Aozora
        </section>
        <section id="right">
            <section id="nav-buttons">
                <button class="nav-button">
                    Home
                </button>
                <button class="nav-button">
                    Log In
                </button>
                <button class="nav-button">
                    Register
                </button>
            </section>
        </section>
    </nav>
    <!-- MAIN BODY -->
    <section id="content">
        <section class="center container" id="register">
                <form class="form" id="registration" action="/register" method="POST">
                    <p class="center-form" id="register-title">Register</p>
                    <p class="right-form">Username: <input type="text" name="username" class="form-input"></p>
                    <p class="right-form">Password: <input type="password" name="password" class="form-input"></p>
                    <p class="center-form"><input type="submit" value="Register" id="register-button"></p>
                </form>
        </section>
    </section>  
</body>
</html>