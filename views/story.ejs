<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=game.name%>: <%="Chapter " + story.chapter%></title>
    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    <!-- STYLES -->
    <link rel="stylesheet" href="/styles/story.css">
    <!-- JQUERY -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- SCRIPTS -->
    <script src = "/scripts/story.js" defer></script>
</head>
<body>
    <div id="textbox">
        <div id="bottom">
        </div>
    </div>
    <%for(let x=0; x<story.songs.length; x++){%>
        <audio id='<%=story.songs[x].name%>-song' volume=2 loop>
            <source src=<%=story.songs[x].url%>>
        </audio>
    <%}%>
    <!-- Variable Processors -->
    <script>
        let images = JSON.parse('<%-JSON.stringify(story.images)%>'); 
        let story = JSON.parse('<%-JSON.stringify(story.story)%>'); 
        let songs = JSON.parse('<%-JSON.stringify(story.songs)%>'); 
        let game = JSON.parse('<%-JSON.stringify(game)%>'); 
        let storyId = JSON.parse('<%-JSON.stringify(story.id)%>'); 
    </script>
</body>
</html>